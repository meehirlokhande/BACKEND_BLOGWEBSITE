<img src="/img/lone.avif" alt="This image define admin." class="hero-image" width="981" height="528">

<section class="articles">
    <h2 class="articles_heading">Latest Posts</h2>

    <ul class="articles_ul">

        <% data.forEach(post => { %>
            
        
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="articles-list_date"><%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        
   <%  }) %>
  </ul>



  <% if (nextPage != null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a> 
  <% } %>
    






</section>